{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "baseUrl": "./",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "types": ["node"],
    "sourceMap": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "exclude": ["lib", "test"]
}
