{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "baseUrl": "./",
    "lib": [
      "ES2019",
      "ESNext",
      "dom"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "types": [
      "node"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "paths": {
      "easy-network-stub/stream": [
        "lib/cjs/stream/index.d.ts"
      ]
    }
  },
  "include": [
    "src",
    "lib"
  ],
}
