{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "baseUrl": "./",
    "lib": [
      "ES2019",
      "ESNext",
      "DOM"
    ],
    "declaration": true,
    "strict": true,
    "types": [
      "node"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "paths": {
      "easy-network-stub": [
        "src/lib/index.ts"
      ],
      "easy-network-stub/stream": [
        "src/stream/index.ts"
      ],
      "easy-network-stub/ws": [
        "src/ws/index.ts"
      ]
    }
  }
}
